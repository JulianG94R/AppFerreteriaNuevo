<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ferreteria Las Dos Tuercas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark  bg-dark fixed-top">
        <div class="logo float-left">
            <a class="tamanoLogo" href="~/Home/Index"><img src="~/Imagenes/tools_15265.png" /> </a>

        </div>


        <div class="navbar-collapse collapse" id="navbarSupportedContent">

            <ul class="nav navbar-nav mr-auto">


                <li class="nav-item active">
                    <a class="nav-link" href="~/Motosierras/Index">Motosierras</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="~/Clientes/Index">Clientes</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="~/Alquilers/Index">Alquileres</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="~/Devolucions/Index">Devoluciones</a>
                </li>

            </ul>

        </div>

        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
                <!-- Log out -->
                <div class="right-menu list-inline no-margin-bottom">
                    <div class="list-inline-item logout">
                        <a id="logout" href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">
                            <span class="btn btn-danger">Cerrar Sesión </span><i class="icon-logout"></i>
                        </a>
                    </div>
                </div>

            }

        }

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

    </nav>


        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year Guastoni</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
