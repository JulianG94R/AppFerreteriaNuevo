        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <div class="row">
            
            <div class="col-md-10">
                @Html.LabelFor(model => model.FechaDevolucion, htmlAttributes: new { @class = "control-label col-md-2" })
