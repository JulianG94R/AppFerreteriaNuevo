            </div>
        </div>
    </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Devolver" class="btn btn-success" />
                <a class="btn btn-link" href="~/Devolucions/Index">Volver</a>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
